CREATE DATABASE [your_customer_name]
 CONTAINMENT = NONE
 ON  PRIMARY 
( NAME = N'your_customer_name', FILENAME = N'/var/opt/mssql/data/your_customer_name.mdf' , SIZE = 5120KB , FILEGROWTH = 10%)
 LOG ON 
( NAME = N'your_customer_name_log', FILENAME = N'/var/opt/mssql/data/your_customer_name_log.ldf' , SIZE = 1024KB , FILEGROWTH = 10%)
GO
ALTER DATABASE [your_customer_name] SET ANSI_NULL_DEFAULT OFF 
GO
ALTER DATABASE [your_customer_name] SET ANSI_NULLS OFF 
GO
ALTER DATABASE [your_customer_name] SET ANSI_PADDING OFF 
GO
ALTER DATABASE [your_customer_name] SET ANSI_WARNINGS OFF 
GO
ALTER DATABASE [your_customer_name] SET ARITHABORT OFF 
GO
ALTER DATABASE [your_customer_name] SET AUTO_CLOSE OFF 
GO
ALTER DATABASE [your_customer_name] SET AUTO_SHRINK OFF 
GO
ALTER DATABASE [your_customer_name] SET AUTO_CREATE_STATISTICS ON(INCREMENTAL = OFF)
GO
ALTER DATABASE [your_customer_name] SET AUTO_UPDATE_STATISTICS ON 
GO
ALTER DATABASE [your_customer_name] SET CURSOR_CLOSE_ON_COMMIT OFF 
GO
ALTER DATABASE [your_customer_name] SET CURSOR_DEFAULT  GLOBAL 
GO
ALTER DATABASE [your_customer_name] SET CONCAT_NULL_YIELDS_NULL OFF 
GO
ALTER DATABASE [your_customer_name] SET NUMERIC_ROUNDABORT OFF 
GO
ALTER DATABASE [your_customer_name] SET QUOTED_IDENTIFIER OFF 
GO
ALTER DATABASE [your_customer_name] SET RECURSIVE_TRIGGERS OFF 
GO
ALTER DATABASE [your_customer_name] SET  DISABLE_BROKER 
GO
ALTER DATABASE [your_customer_name] SET AUTO_UPDATE_STATISTICS_ASYNC OFF 
GO
ALTER DATABASE [your_customer_name] SET DATE_CORRELATION_OPTIMIZATION OFF 
GO
ALTER DATABASE [your_customer_name] SET PARAMETERIZATION SIMPLE 
GO
ALTER DATABASE [your_customer_name] SET READ_COMMITTED_SNAPSHOT OFF 
GO
ALTER DATABASE [your_customer_name] SET  READ_WRITE 
GO
ALTER DATABASE [your_customer_name] SET RECOVERY SIMPLE 
GO
ALTER DATABASE [your_customer_name] SET  MULTI_USER 
GO
ALTER DATABASE [your_customer_name] SET PAGE_VERIFY CHECKSUM  
GO
ALTER DATABASE [your_customer_name] SET TARGET_RECOVERY_TIME = 0 SECONDS 
GO
ALTER DATABASE [your_customer_name] SET DELAYED_DURABILITY = DISABLED 
GO
USE [your_customer_name]
GO
ALTER DATABASE SCOPED CONFIGURATION SET LEGACY_CARDINALITY_ESTIMATION = Off;
GO
ALTER DATABASE SCOPED CONFIGURATION FOR SECONDARY SET LEGACY_CARDINALITY_ESTIMATION = Primary;
GO
ALTER DATABASE SCOPED CONFIGURATION SET MAXDOP = 0;
GO
ALTER DATABASE SCOPED CONFIGURATION FOR SECONDARY SET MAXDOP = PRIMARY;
GO
ALTER DATABASE SCOPED CONFIGURATION SET PARAMETER_SNIFFING = On;
GO
ALTER DATABASE SCOPED CONFIGURATION FOR SECONDARY SET PARAMETER_SNIFFING = Primary;
GO
ALTER DATABASE SCOPED CONFIGURATION SET QUERY_OPTIMIZER_HOTFIXES = Off;
GO
ALTER DATABASE SCOPED CONFIGURATION FOR SECONDARY SET QUERY_OPTIMIZER_HOTFIXES = Primary;
GO
USE [your_customer_name]
GO
IF NOT EXISTS (SELECT name FROM sys.filegroups WHERE is_default=1 AND name = N'PRIMARY') ALTER DATABASE [your_customer_name] MODIFY FILEGROUP [PRIMARY] DEFAULT
GO
